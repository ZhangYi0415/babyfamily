page {
    background-color: #f8f8f8;
}

.container-row{
    width: 100%;
    background-color: #ffffff;
    border-top: solid 1px #d9d9d9;
    border-bottom: solid 1px #d9d9d9;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    padding: 4px 0;
}

.row-line {
    width: 90%;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: start;
    align-items: center;
}

.row-line .img-con {
    display: flex;
    flex-direction: row-reverse;
    justify-content: center;
    align-items: center;
    width: 33.3333%;
    position : relative;
}

.row-line .img-con .front {
    background-color: #ededed;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    width : 90%;
    height : 90%;
}

.row-line .img-con .img {
    width: 100%;
    height: 100%;
}

.row-line .img-con .delete{
    position: absolute;
    right: -2px;
    top: -2px;
    width: 25px;
    height: 25px;
}

.row-line .img-con .addImg {
    width: 40%;
    height: 40%;
}