page {
    background-color: #f8f8f8;
}

.container-row {
    width: 100%;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: start;
    align-items: center;
    background-color: #ffffff;
}

.container-row .inner {
    width: 50%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 10px 0;
}

.container-row .inner .holder {
    width: 100%;
    height: auto;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    font-size: 12px;
    color : #888888;
}

.img {
    width: 80px;
    height: 80px;
    border-radius: 40px;
}