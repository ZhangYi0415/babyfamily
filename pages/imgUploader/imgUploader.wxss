.row {
    width : 100%;
    height : 40px;
    display: flex;
    flex-direction: row-reverse;
    justify-content: start;
    align-items: center;
    background-color: #000000;
}

.btn-row {
    width: 60px;
    height: 30px;
    border-radius: 10px;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    color: #ffffff;
    font-size: 14px;
    margin: 0 10px 0 0;
    background-color: #1aad19;
}